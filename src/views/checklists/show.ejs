<%- include('../layouts/header', {title: checklists.name}) %>

  <%- include('../layouts/menu') %>

    <section class="section">
      <div class="container">
        <div class="columns">
          <div class="column is-four-fifths">
            <h1 class="title size-4">
              <%= checklists.name %>
            </h1>
          </div>
          <div class="column is-one-fifth">
            <a href="/checklist/<%= checklists._id %>/tasks/new" class="button is-success is-small">Nova Tarefa</a>
            <a href="/checklists" class="button is-small">Voltar</a>
          </div>
        </div>

        <hr />
        <% if (checklists.tasks && checklists.tasks.length) { %>
        <% checklists.tasks.forEach(task => { %>
          <div class="columns">
            <div class="column is-four-fifths <%= task.done ? 'has-text-sucess is italic' : '' %>">
              <input type="checkbox" onchange="setTagAsDone(this, '<%= task._id %>')" <%=task.done ? 'checked' : '' %>
              /> <%= task.name %>
            </div>

            <div class="column is-one-fifth">
              <a href="/tasks/<%= task._id %>?_method=delete" class="button is-danger is-small">Remover</a>
            </div>
          </div>
          <% }) %>
          <% } else { %>
            noeme da tarefa
          <% } %>


      </div>
    </section>

    <%- include('../layouts/footer') %>